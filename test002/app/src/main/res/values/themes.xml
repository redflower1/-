<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SkibidiToiletBattle" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Tertiary colors for Material 3 -->
        <item name="colorTertiary">@color/teal_700</item>
        <item name="colorOnTertiary">@color/white</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/white</item>
        <!-- Status bar color using new Material 3 approach -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    
    <!-- Fullscreen theme for game activity -->
    <style name="Theme.SkibidiToiletBattle.Fullscreen" parent="Theme.SkibidiToiletBattle">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>
</resources>
